{
  "customSyntax": "postcss-jsx",
  "extends": [
    "stylelint-config-standard",
    "stylelint-config-styled-components"
  ],
  "rules": {
    "at-rule-no-unknown": [
      true,
      {
        "ignoreAtRules": [
          "include",
          "mixin",
          "if",
          "else",
          "for",
          "function",
          "return",
          "content",
          "each",
          "debug",
          "warn",
          "use",
          "forward",
          "extend"
        ],
        "severity": "error"
      }
    ],
    "declaration-empty-line-before": "never",
    "no-empty-source": null
  }
}
